#download any pi updates
sudo apt-get update 

#install the downloaded pi updates
sudo apt-get upgrade 

#open pi config. window
sudo raspi-config

#reboot the pi OS
sudo reboot

#capture image as "image.jpeg" in the same directory
raspistill -o image.jepg

#capture video as "video.h264" in the same directory
raspivid -o video.h264

#download zip files <> = user input 
wget -O <File Name.zip> <http zip link>

#unzip downloaded zip file 
unzip <File Name.zip>

#Create a new virtualenv
mkvirtualnev <Project Name>

#Load or switch virtualenvs
workon <Project Name>

#Deactivate virtualenvs
(cv) deactivate

#Create directory file
mkdir <File Name>

#Delete all files on the directory
rm -rf <File Name>

#Change default python 2.7 to python 3
:~$ python --version
:~$ python3 --version 
:~$ type -a python3                     #'/usr/bin/python3'
:~$ nano ~/.bashrc
alias python='/usr/bin/python3'         #insert and save
:~$ . ~/.bashrc                         #reload bashrc
:~$ python --version                    #should be the python3 version now

#install pip for python3
sudo apt-get install python3-pip
