#download any updates
sudo apt-get update 

#install the downloaded updates
sudo apt-get upgrade 

#check for ubuntu updates
update-manager

#open pi config. window
sudo raspi-config

#reboot the pi OS
sudo reboot

#capture image as "image.jpeg" in the same directory using pi-Camera
raspistill -o image.jepg

#capture video as "video.h264" in the same directory using pi-Camera
raspivid -o video.h264

#download zip files <> = user input 
wget -O <File Name.zip> <http zip link>

#unzip downloaded zip file <> = user input 
unzip <File Name.zip>

#Create a new virtualenv <> = user input 
mkvirtualnev <Project Name>

#Load or switch virtualenvs <> = user input 
workon <Project Name>

#Deactivate virtualenvs
(cv) deactivate

#Create directory file <> = user input 
mkdir <File Name>

#Delete all files on the directory <> = user input 
rm -rf <File Name>

#Change default python 2.7 to python 3
:~$ python --version
:~$ python3 --version 
:~$ type -a python3                     #'/usr/bin/python3'
:~$ nano ~/.bashrc
alias python='/usr/bin/python3'         #insert and save
:~$ . ~/.bashrc                         #reload bashrc
:~$ python --version                    #should be the python3 version now

#install pip for python3
sudo apt-get -y install python3-pip
pip3 --version                          #show pip3 version and python running

#install cmake 
sudo apt-get -y install cmake
