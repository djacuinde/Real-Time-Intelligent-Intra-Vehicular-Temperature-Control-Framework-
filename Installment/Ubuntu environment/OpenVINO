
#Download Intel's OpenVino toolkit for Linux zip file 
cd ~/Downloads/                                               #choice desired directory to download
Downloads/ tar -xvzf l_openvino_toolkit_p_<version>.tgz       #(e.g. tar -xvzf l_openvino_toolkit_p_2020.3.194.tgz ) 
cd l_openvino_toolkit_p_<version>                             #(e.g. cd l_openvino_toolkit_p_2020.3.194 )

# if previous versions of openVINO delete ~/inference_engine_samples_build & ~/openvino_models

sudo ./install_GUI.sh

cd /opt/intel/openvino/install_dependencies
sudo -E ./install_openvino_dependencies.sh

~$ nano ~/.bashrc
source /opt/intel/openvino/bin/setupvars.sh                     #insert in bashrc file and save
~$ . ~/.bashrc                                                  #reloads bashrc and open new terminal 
                                                                # Should prompt "[setupvar.sh] OpenVINO environment initialized"
                                                              
cd /opt/intel/openvino/deployment_tools/model_optimizer/install_prerequisites
sudo ./install_prerequisites.sh

#Demos 
cd /opt/intel/openvino/deployment_tools/demo
./demo_squeezenet_download_convert_run.sh                        #Prompts top 10 results of car.png and sucessfully

./demo_security_barrier_camera.sh                                # New window with detection result of car

IntelÂ® Processor Graphics (GPU) {OPTIONAL}
cd /opt/intel/openvino/install_dependencies/
sudo -E su
./install_NEO_OCL_driver.sh
#add OpenCL user to video group
#run and isntall 4.14 kernel script 

#Interference for Movidius and Nueral Compute Stick 2
sudo usermod -a -G users "$(whoami)"                            #log out and in to take effect
sudo cp /opt/intel/openvino/inference_engine/external/97-myriad-usbboot.rules /etc/udev/rules.d/
sudo udevadm control --reload-rules
sudo udevadm trigger
sudo ldconfig                                                   #might need to reboot to take effect



